{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "configure version scheme for ppatlabs images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ppatlabs/{/,}**"
      ],
      "versioning": "semver-coerced"
    },
    {
      "description": "configure version scheme for linuxserver images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/linuxserver/{/,}**"
      ],
      "versioning": "semver-coerced"
    },
    {
      "description": "configure version scheme for various docker images needing loose versioning",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "plexinc/pms-docker",
        "madnuttah/unbound"
      ],
      "versioning": "loose"
    },
    {
      "description": "configure version scheme for minio images",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "minio/minio",
        "minio/mc"
      ],
      "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T\\d{2}-\\d{2}-\\d{2}Z$"
    },
    {
      "description": [
        "strip digests from OCIRepository tags (flux rejects digests in ref.tag field)"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "flux"
      ],
      "versioning": "semver"
    }
  ]
}
