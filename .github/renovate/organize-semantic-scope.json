{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "add semantic commit scope for apps-* subsystems",
      "matchFileNames": [
        "apps/subsystems/**"
      ],
      "semanticCommitScope": "apps-{{ lookup (split packageFileDir '/') 2 }}"
    },
    {
      "description": "add semantic commit scope for apps-helm-repositories",
      "matchFileNames": [
        "apps/helm-repositories/**"
      ],
      "semanticCommitScope": "apps-helm-repositories"
    },
    {
      "description": "add semantic commit scope for infra-* subsystems",
      "matchFileNames": [
        "infrastructure/subsystems/**"
      ],
      "semanticCommitScope": "infra-{{ lookup (split packageFileDir '/') 2 }}"
    },
    {
      "description": "add semantic commit scope for infra-helm-repositories",
      "matchFileNames": [
        "infrastructure/helm-repositories/**"
      ],
      "semanticCommitScope": "infra-helm-repositories"
    },
    {
      "description": "add semantic commit scope for infra-bootstrap-crds",
      "matchFileNames": [
        "infrastructure/bootstrap/crds/**"
      ],
      "semanticCommitScope": "infra-bootstrap-crds"
    }
  ]
}
