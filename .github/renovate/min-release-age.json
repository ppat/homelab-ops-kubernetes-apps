{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "updateType=[patch,digest] | configure min release age",
      "matchUpdateTypes": [
        "digest",
        "patch"
      ],
      "minimumReleaseAge": "1 days"
    },
    {
      "description": "updateType=[minor] | configure min release age",
      "matchUpdateTypes": [
        "minor"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "updateType=[major] | configure min release age",
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "60 days"
    },
    {
      "description": "datasource=kubernetes-api | configure min release age",
      "matchDatasources": [
        "kubernetes-api"
      ],
      "minimumReleaseAge": "60 days"
    }
  ]
}
