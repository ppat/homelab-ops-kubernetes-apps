{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "disable update of flux images by kubernetes manager (as they are solely managed by flux manager)",
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/fluxcd/helm-controller",
        "ghcr.io/fluxcd/kustomize-controller",
        "ghcr.io/fluxcd/notification-controller",
        "ghcr.io/fluxcd/source-controller"
      ]
    },
    {
      "description": "disable minio updates due to OSS unfriendly practices until a suitable replacement is found",
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "minio/minio",
        "minio/mc"
      ],
      "matchUpdateTypes": [
        "digest",
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest"
      ]
    },
    {
      "description": "do not update pihole until blocky trial is done",
      "enabled": false,
      "matchPackageNames": [
        "pihole/pihole"
      ]
    },
    {
      "description": [
        "strip digests from OCIRepository tags (flux rejects digests in ref.tag field)"
      ],
      "extractVersion": "^(?<version>[^@]+)",
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "flux"
      ]
    },
    {
      "description": "disable pin digest types updates as flux rejects digests on OCIRepository resources",
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "flux"
      ],
      "matchUpdateTypes": [
        "pinDigest"
      ]
    }
  ]
}
