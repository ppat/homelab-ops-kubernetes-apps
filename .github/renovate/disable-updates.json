{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "disable update of flux images by kubernetes manager (as they are solely managed by flux manager)",
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchPackageNames": [
        "ghcr.io/fluxcd/helm-controller",
        "ghcr.io/fluxcd/kustomize-controller",
        "ghcr.io/fluxcd/notification-controller",
        "ghcr.io/fluxcd/source-controller"
      ]
    },
    {
      "description": "renovate bug that attempts to update a flux helmrelease for OCI repositories",
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest",
        "pin",
        "pinDigest"
      ],
      "matchPackageNames": [
        "bitnamicharts/kubernetes-event-exporter",
        "registry-1.docker.io/bitnamicharts/kubernetes-event-exporter"
      ]
    },
    {
      "description": "renovate bug that attempts to update image digests unnecessarily",
      "enabled": false,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "minio/minio"
      ],
      "matchUpdateTypes": [
        "digest",
        "pin",
        "pinDigest"
      ]
    }
  ]
}
