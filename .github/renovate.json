{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?)\\s+depName=(?<depName>[a-zA-Z0-9-\/]+?)(\\s+repository=(?<registryUrl>[^\\s]+?))?(\\s+versioning=(?<versioning>[^\\s]+?))?(\\s+extractVersion=(?<extractVersion>[^\\s]+?))?\\s*\\n.+[\\:\\=]\\s?\"v?(?<currentValue>[^\\s]+)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^.github/kind-cluster-.+\\.yaml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?)(\\s+repository=(?<registryUrl>[^\\s]+?))?(\\s+versioning=(?<versioning>[^\\s]+?))?\\s*\\n.+[\\:\\=]\\s?\"(?<depName>[^:]+)\\:(?<currentValue>[^\\s@]+)(@(?<currentDigest>sha256:[0-9a-f]*))?\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate-gh-release-asset: datasource=(?<datasource>[a-z-.]+?)\\s+depName=(?<depName>[a-zA-Z0-9-\/]+?)(\\s+repository=(?<registryUrl>[^\\s]+?))?(\\s+versioning=(?<versioning>[^\\s]+?))?(\\s+extractVersion=(?<extractVersion>[^\\s]+?))?\\s*\\n.+github\\.com(\\.)?\\/(.+)\\/releases\\/download\\/v(?<currentValue>[^\\/]+)\\/"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).+\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate-gh-raw-url: datasource=(?<datasource>[a-z-.]+?)\\s+depName=(?<depName>[a-zA-Z0-9-\/]+?)(\\s+repository=(?<registryUrl>[^\\s]+?))?(\\s+versioning=(?<versioning>[^\\s]+?))?(\\s+extractVersion=(?<extractVersion>[^\\s]+?))?\\s*\n.+raw\\.githubusercontent\\.com(\\.)?\\/(.+)\\/v(?<currentValue>[^\\/]+)\\/"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "extends": [
    "config:best-practices",
    "group:linters",
    "mergeConfidence:all-badges",
    "github>ppat/renovate-presets:default-commit-message",
    "github>ppat/renovate-presets:ci-dependencies",
    "github>ppat/renovate-presets:ci-dev-tools",
    "github>ppat/renovate-presets:ci-github-actions",
    "github>ppat/test-kubernetes//.github/renovate/custom-grafana-dashboard",
    "github>ppat/test-kubernetes//.github/renovate/automerge",
    "github>ppat/test-kubernetes//.github/renovate/labels-dependency-type",
    "github>ppat/test-kubernetes//.github/renovate/labels-subsystem",
    "github>ppat/test-kubernetes//.github/renovate/min-release-age",
    "github>ppat/test-kubernetes//.github/renovate/semantic-commit-scope",
    "github>ppat/test-kubernetes//.github/renovate/semantic-commit-type",
    "github>ppat/test-kubernetes//.github/renovate/version-separation",
    "github>ppat/test-kubernetes//.github/renovate/group",
    "github>ppat/test-kubernetes//.github/renovate/exceptions-version-scheme",
    "github>ppat/test-kubernetes//.github/renovate/exceptions-version-separation",
    "github>ppat/test-kubernetes//.github/renovate/exceptions-min-release-age",
    "github>ppat/test-kubernetes//.github/renovate/exceptions-breaking-change",
    "github>ppat/test-kubernetes//.github/renovate/exceptions-automerge-disabled",
    "github>ppat/test-kubernetes//.github/renovate/exceptions-updates-disabled"
  ],
  "flux": {
    "fileMatch": [
      "apps/.+\\.yaml$",
      "clusters/.+\\.yaml$",
      "infrastructure/.+\\.yaml$"
    ]
  },
  "internalChecksFilter": "strict",
  "kubernetes": {
    "fileMatch": [
      "apps/.+\\.yaml$",
      "clusters/.+\\.yaml$",
      "infrastructure/.+\\.yaml$"
    ],
    "ignorePaths": [
      "infrastructure/subsystems/clusterops-core/flux/gotk-components.yaml"
    ]
  },
  "prConcurrentLimit": 30,
  "prHourlyLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "timezone": "US/Eastern"
}
